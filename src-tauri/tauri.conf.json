{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "tauri-learning",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "System Monitor",
        "width": 800,
        "height": 600,
        "visible": false,
        "resizable": true,
        "decorations": false
      },
      {
        "label": "splashscreen",
        "url": "/splashscreen.html",
        "width": 400,
        "height": 300,
        "decorations": false,
        "center": true,
        "alwaysOnTop": true,
        "transparent": true,
        "backgroundColor": "#0f0f0f"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
