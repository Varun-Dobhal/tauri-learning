{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "tauri-learning",
  "version": "0.1.3",
  "identifier": "com.varun.systemmonitor",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "System Monitor",
        "width": 800,
        "height": 600,
        "visible": false,
        "resizable": true,
        "decorations": false
      },
      {
        "label": "splashscreen",
        "url": "/splashscreen.html",
        "width": 400,
        "height": 300,
        "decorations": false,
        "center": true,
        "alwaysOnTop": true,
        "transparent": true,
        "backgroundColor": "#0f0f0f"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/Varun-Dobhal/tauri-learning/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRGMTczQThBNzVDNzcyQTgKUldTb2NzZDFpam9YVDAvUXFITEVwWklpQXArZVZrTFZHL2VPcVdKb2dnK0NJMmdiZHJianJONk4K"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
